<div class="item-related carousel__item js-carousel-item " style="display:none">
<li class="{{ prod.handle }}" >
        <h3 class="name">
            <a href="{{ prod.url }}" title="{{ prod.title | escape }}">{{ prod.title }}</a>
        </h3>
        <div class="price">
            <a href="{{ prod.url }}" title="{{ prod.title | escape }}">{{ prod.price | money }}</a>
        </div>
        
        <div class="image">            
            <a href="{{ prod.url | within: collection }}" title="{{ product.title | escape }}">
                {{ prod.featured_image | product_img_url: '200X200' | img_tag }}</a>
        </div>
        
        <div class="copy">
            {{ prod.description | strip_html | truncatewords: 15 }}
        </div>
        <div class="more"><a class="btn" href="{{ prod.url }}" title="{{ prod.title | escape }}">Ver producto</a></div>
        <div class="clear"></div>
    </li>
</div>